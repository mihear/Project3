<div class="main-panel" ng-controller="restaurantsController as vm" ng-init="vm.init()">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row" style="padding-bottom : 2%">
                            <div class="col-md-11 col-sm-8 ">
                                <h4 class="card-title" style="font-size : 24px ; color : #4b4b4b">Order Rate - Top 10</h4>
                            </div>
                            <div class="col-md-1 col-sm-4 " style="text-align: center;font-size: 20px;  cursor : pointer">
                                <i data-toggle="modal" data-target="#Order_Rate" class="glyphicon glyphicon-filter"></i>
                            </div>
                        </div>
                        <div style="text-align : center ; padding-top : 16% ; height: 289px; " ng-show="false">
                            <img width="100" src="~/Content/beeorder_logo.gif" />
                        </div>
                        <div id="barCha" >
                            <canvas id="myChart" style="width : 100%" height="400"></canvas>
                        </div>
                        <div id="noResultOrder" style="text-align : center  ; display : none">
                            <img width="500" src="~/template/beeOrder logo/NO_RESULT.png" />
                        </div>
                        </div>
                </div>
            </div>
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">

                    </div>
                </div>
            </div>
        </div>

        <!-- The Modal -->
        <div class="modal" id="Order_Rate" style="padding-right : 50% !important">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: 400;color: #2e444b;">Order Rate - Top 10</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label style="font-weight: 400;color: #2e444b;">From : </label>
                                <input id="from" name="date" type="date" class="form-control" ng-model="vm.filter.from" />
                            </div>
                            <div class="col-md-6">
                                <label style="font-weight: 400;color: #2e444b;">To :</label>
                                <input type="date" id="to" class="form-control" ng-model="vm.filter.to" />
                            </div>
                        </div>

                        <div class="row" style="margin-top : 3%">
                            <div class="col-md-6">
                                <label style="font-weight: 400;color: #2e444b;" for="sel1">Restaurant</label>
                                <select class="form-control" id="sel1" name="sellist1" ng-model="vm.filter.id">
                                    <option ng-value="item.id" id="dr" ng-repeat="item in vm.allDrivers">
                                        {{item.nameof}}
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-6">

                            </div>

                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="vm.dTimeline()">Filter</button>
                    </div>

                </div>
            </div>
        </div>





        <!-- driver order modal-->
        <div class="modal" id="dOrder" style="padding-right : 50% !important">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-weight: 400;color: #2e444b;">Timeline Drivers Filter</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label style="font-weight: 400;color: #2e444b;">From :</label>
                                <input id="from" name="date" type="date" class="form-control" ng-model="vm.orderFilter.from" />
                            </div>
                            <div class="col-md-6">
                                <label style="font-weight: 400;color: #2e444b;">To :</label>
                                <input type="date" id="to" class="form-control" ng-model="vm.orderFilter.to" />
                            </div>
                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="vm.dOrder()">Filter</button>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>

